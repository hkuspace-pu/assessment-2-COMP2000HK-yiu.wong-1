<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewActivity">

    <Button
        android:id="@+id/btnCProj"
        android:layout_width="222dp"
        android:layout_height="93dp"
        android:layout_marginTop="68dp"
        android:text="Create New Project"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCNYear"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etCNStudentId"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Student ID"
        app:layout_constraintEnd_toEndOf="@+id/etCNFirstName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCNFirstName"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="First Name"
        app:layout_constraintEnd_toEndOf="@+id/etCNLastName"
        app:layout_constraintTop_toBottomOf="@+id/etCNStudentId" />

    <EditText
        android:id="@+id/etCNLastName"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="@+id/etCNTitle"
        app:layout_constraintTop_toBottomOf="@+id/etCNFirstName" />

    <EditText
        android:id="@+id/etCNTitle"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="@+id/etCNDesc"
        app:layout_constraintTop_toBottomOf="@+id/etCNLastName" />

    <EditText
        android:id="@+id/etCNDesc"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Description"
        app:layout_constraintEnd_toEndOf="@+id/etCNYear"
        app:layout_constraintTop_toBottomOf="@+id/etCNTitle" />

    <EditText
        android:id="@+id/etCNYear"
        android:layout_width="386dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCNDesc" />

</androidx.constraintlayout.widget.ConstraintLayout>