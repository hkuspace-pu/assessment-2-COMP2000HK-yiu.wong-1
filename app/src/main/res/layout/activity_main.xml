<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="417dp"
        android:layout_height="34dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Project Hub"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMAProjectId"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_marginTop="52dp"
        android:fontFamily="sans-serif-medium"
        android:text="Project ID"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchById"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeTitle"
        app:layout_constraintVertical_bias="0.223" />

    <Button
        android:id="@+id/btnSearchById"
        android:layout_width="310dp"
        android:layout_height="88dp"
        android:layout_marginBottom="264dp"
        android:text="Search By Project ID"
        app:layout_constraintBottom_toTopOf="@+id/btnImageUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeTitle"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Update Project Info"
        app:layout_constraintBottom_toTopOf="@+id/btnListAllProjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnCreate"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchById"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnListAllProjects"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="List All Projects"
        app:layout_constraintBottom_toTopOf="@+id/btnImageUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnDelete" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="Delete Project"
        app:layout_constraintBottom_toTopOf="@+id/btnImageUpload"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="79dp"
        android:text="Create New Project"
        app:layout_constraintBottom_toTopOf="@+id/btnDelete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchById"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnImageUpload"
        android:layout_width="377dp"
        android:layout_height="107dp"
        android:layout_marginBottom="16dp"
        android:text="Upload Project Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>