<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="414dp"
        android:layout_height="42dp"
        android:background="#00FEFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Student Project Hub"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <EditText
        android:id="@+id/etMAProjectId"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Enter Project ID"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchById"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <Button
        android:id="@+id/btnSearchById"
        android:layout_width="243dp"
        android:layout_height="70dp"
        android:layout_marginBottom="264dp"
        android:text="Search By Project ID"
        app:layout_constraintBottom_toTopOf="@+id/btnProjImageUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnUpdateProj"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Update Project Info"
        app:layout_constraintBottom_toTopOf="@+id/btnListAllProjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnCreateNew"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchById"
        app:layout_constraintVertical_bias="1.0"
        />

    <Button
        android:id="@+id/btnListAllProjects"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="List All Projects"
        app:layout_constraintBottom_toTopOf="@+id/btnProjImageUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteProj"
        />

    <Button
        android:id="@+id/btnDeleteProj"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:text="Delete Project"
        app:layout_constraintBottom_toTopOf="@+id/btnProjImageUpload"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnCreateNew"
        android:layout_width="187dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="79dp"
        android:text="Create New Project"
        app:layout_constraintBottom_toTopOf="@+id/btnDeleteProj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearchById"
        app:layout_constraintVertical_bias="1.0"
        />

    <Button
        android:id="@+id/btnProjImageUpload"
        android:layout_width="377dp"
        android:layout_height="107dp"
        android:layout_marginBottom="16dp"
        android:text="Upload Project Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>